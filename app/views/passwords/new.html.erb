<div class="login-box">
  <div class="login-logo">
    <b>Admin</b>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg"><b>Forgot your password?</b></p>
    <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
    <%= form_with url: passwords_path do |form| %>
      <div class="form-group has-feedback">
        <%= form.email_field :email_address, class: 'form-control', required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %><br>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-8">
          <%= form.submit "Email reset instructions", class: 'btn btn-primary btn-block btn-flat' %>
        </div>
        <div class="col-xs-2">
        </div>
      </div>
    <% end %>
  </div>
</div>
