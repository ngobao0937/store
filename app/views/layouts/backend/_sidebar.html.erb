<aside class="main-sidebar">
    <section class="sidebar">
      <% if Current.user %>
        <div class="user-panel">
          <div class="pull-left image">
            <% if Current.user.featured_image.blank? %>
              <img src="/admin.png" class="img-circle" alt="User Image">
            <% else %>
            <img src="<%= url_for(Current.user.featured_image) %>" class="img-circle" alt="User Image">
            <% end %>
          </div>
          <div class="pull-left info">
            <p><%= Current.user.name %></p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
          </div>
        </div>
      <% end %>

      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>
        
        <li class="<%= 'active' if current_page?(dashboard_path) %>">
          <%= link_to dashboard_path do %>
            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
          <% end %>
        </li>
        <li class="<%= 'active' if current_page?(orders_path) || (@order && current_page?(order_path(@order))) %>">
          <%= link_to orders_path do %>
            <i class="fa fa-shopping-cart"></i> <span>Orders</span>
          <% end %>
        </li>
        <li class="<%= 'active' if current_page?(products_path) || current_page?(new_product_path) || (@product && current_page?(edit_product_path(@product))) %>">
          <%= link_to products_path do %>
            <i class="fa fa-product-hunt"></i> <span>Products</span>
          <% end %>
        </li>
        <li class="<%= 'active' if current_page?(menus_path) || current_page?(new_menu_path) || (@menu && current_page?(edit_menu_path(@menu))) %>">
          <%= link_to menus_path do %>
            <i class="fa fa-bars"></i> <span>Menus</span>
          <% end %>
        </li> 
        <li class="<%= 'active' if current_page?(pages_path) || current_page?(new_page_path) || (@page && current_page?(edit_page_path(@page))) %>">
          <%= link_to pages_path do %>
            <i class="fa fa-newspaper-o"></i> <span>Pages</span>
          <% end %>
        </li>
        <li class="<%= 'active' if current_page?(banners_path) || current_page?(new_banner_path) || (@banner && current_page?(edit_banner_path(@banner))) %>">
          <%= link_to banners_path do %>
            <i class="fa fa-picture-o"></i> <span>Banners</span>
          <% end %>
        </li>   
        <li class="<%= 'active' if current_page?(users_path) || current_page?(new_user_path) || (@user && @title == 'Sá»­a user' && current_page?(edit_user_path(@user))) %>">
          <%= link_to users_path do %>
            <i class="fa fa-user"></i> <span>Users</span>
          <% end %>
        </li>
        <li class="<%= 'active' if current_page?(edit_user_path(Current.user.id)) %>">
          <%= link_to edit_user_path(Current.user.id) do %>
            <i class="fa fa-user-circle-o"></i> <span>Profile</span>
          <% end %>
        </li>       
        <li>
          <%= link_to session_logout_path do %>
            <i class="fa fa-sign-out"></i> <span>Sign out</span>
          <% end %>
        </li>         
      </ul>
    </section>
  </aside>
  